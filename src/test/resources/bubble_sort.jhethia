kaam bubble_sort [ arr, n ]
    chai_piyo i in 0..n - 1
    chai_piyo j in 0..n - i - 1
    agar arr{j+1} < arr{j}
                temp = arr{j}
                arr{j} = arr{j + 1}
                arr{j + 1} = temp
    khatam
       biscuit_khao
    biscuit_khao
khatam

kaam is_sorted [ arr, n ]
    chai_piyo i in 0..n - 1
        agar arr{i} > arr{i+1}
            bhejo "galat_baat_hai"
        khatam
    biscuit_khao
    bhejo "sahi_baat_hai"
khatam

